@model IEnumerable<UniversityOfRoommates.Models.Casa>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
<link href='http://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic' rel='stylesheet' type='text/css'>
<link href='http://fonts.googleapis.com/css?family=Raleway:400,300,700' rel='stylesheet' type='text/css'>
@{
    ViewBag.Title = "Index";
}


<div class="back">
    <div class="tabCase">
        <div class="login-html">
            <div class="form-horizontal">
                <div align="center">
                    <p>
                        @Html.ActionLink("Aggiungi un casa", "Create")
                    </p>
                </div>
                <table class="table">
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Proprietario.iban)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.provincia)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.city)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.indirizzo)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.civico)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.cap)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.numeroServizi)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.metraturaInterna)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.metraturaEsterna)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.postoAuto)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.descrizioneServizi)
                        </th>
                        <th></th>
                    </tr>

                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Proprietario.iban)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.provincia)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.city)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.indirizzo)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.civico)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.cap)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.numeroServizi)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.metraturaInterna)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.metraturaEsterna)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.postoAuto)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.descrizioneServizi)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { nomeCasa = item.nomeCasa, longitudine = item.longitudine, latitudine = item.latitudine }) |
                                @Html.ActionLink("Details", "Details", new { nomeCasa = item.nomeCasa, longitudine = item.longitudine, latitudine = item.latitudine }) |
                                @Html.ActionLink("Delete", "Delete", new { nomeCasa = item.nomeCasa, longitudine = item.longitudine, latitudine = item.latitudine })
                            </td>
                        </tr>
                    }

                </table>
                <br />
                <br />

                <br /><br />
                <br />
            </div>
        </div>
    </div>
</div>
            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
                @Scripts.Render("~/bundles/jquery")
                @Scripts.Render("~/bundles/bootstrap")
            }
