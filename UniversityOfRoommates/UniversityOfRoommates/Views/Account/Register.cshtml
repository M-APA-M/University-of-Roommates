@model UniversityOfRoommates.Models.RegisterViewModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
<link href='http://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic' rel='stylesheet' type='text/css'>
<link href='http://fonts.googleapis.com/css?family=Raleway:400,300,700' rel='stylesheet' type='text/css'>
@{
    ViewBag.Title = "Registrazione";
}



@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    
    @Html.ValidationSummary("", new { @class = "text-danger" })


    <div class="back">
        <div class="login-wrap">
            <div class="login-html">
                
                <h2 style="color:azure">@ViewBag.Title.</h2>
                <h4 style="color:azure">Creare un nuovo utente.</h4>
                <div class="form-group">
                    @Html.LabelFor(m => m.Email, new { @class = "UtenteFont" })
                    <div class="group">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.Password, new { @class = "UtenteFont" })
                    <div class="group">
                        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "UtenteFont" })
                    <div class="group">
                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.nome, new { @class = "UtenteFont" })
                    <div class="group">
                        @Html.TextBoxFor(m => m.nome, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.cognome, new { @class = "UtenteFont" })
                    <div class="group">
                        @Html.TextBoxFor(m => m.cognome, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.sesso, new { @class = "UtenteFont" })<br />
                    <div class="UtenteFont">
                        <div class="checkbox">
                           
                            <form action="">
                                <input type="radio" name="gender" value="male"> Male<br>
                                <input type="radio" name="gender" value="female"> Female<br>
                                <input type="radio" name="gender" value="other"> Other
                            </form>
                           @*@Html.RadioButtonFor(m => m.sesso)*@
                           
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.cell, new { @class = "UtenteFont" })
                    <div class="group">
                        @Html.TextBoxFor(m => m.cell, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.cittàProvenienza, new { @class = "UtenteFont" })
                    <div class="group">
                        @Html.TextBoxFor(m => m.cittàProvenienza, new { @class = "form-control" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.ddn, new { @class = "UtenteFont" })
                    <div class="group">
                        @Html.TextBoxFor(m => m.ddn, new { @class = "form-control" })
                    </div>
                </div>
               

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" class="btn btn-default" value="Registra" />
                    </div>
                </div>
            </div>
        </div>
    </div>
               

}

        @section Scripts {
            @Scripts.Render("~/bundles/jqueryval")
@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")
        }
