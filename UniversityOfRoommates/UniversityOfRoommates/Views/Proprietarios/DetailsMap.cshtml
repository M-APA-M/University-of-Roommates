@model UniversityOfRoommates.Models.Proprietario
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
<link href='http://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic' rel='stylesheet' type='text/css'>
<link href='http://fonts.googleapis.com/css?family=Raleway:400,300,700' rel='stylesheet' type='text/css'>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "Details";
}


<div class="back">
    <div class="login-wrap">
        <div class="login-html">
            <div>
                <h4 style="color:azure">Dettagli proprietario.</h4>
                <hr />
                <dl class="dl-horizontal">
                    <dt>
                        <label class="UtenteFont">Nome :   </label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Utente.nome, new { @class = "UtenteFont" })
                    </dd>

                    <dt>
                        <label class="UtenteFont">Cognome :   </label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Utente.cognome, new { @class = "UtenteFont" })
                    </dd>

                    <dt>
                        <label class="UtenteFont">Iban :   </label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.iban)
                    </dd>

                    <dt>
                        <label class="UtenteFont">Paypal.Me :   </label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.paypalMe)
                    </dd>
                   
                    <dt>
                        <label class="UtenteFont">Cellulare :   </label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.Utente.cell)
                    </dd>

                    <dt>
                        <label class="UtenteFont">Carta di identità :   </label>
                    </dt>

                    <dd>
                        @Html.DisplayFor(model => model.cartaIdentità)
                    </dd>
                </dl>
            </div>
        </div>
    </div>
</div>
<p>
    @*@Html.ActionLink("Edit", "Edit", new { id = Model.UserId }) |*@
