@model UniversityOfRoommates.Models.Proprietario
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href='http://fonts.googleapis.com/css?family=Lato:300,400,700,300italic,400italic' rel='stylesheet' type='text/css'>
<link href='http://fonts.googleapis.com/css?family=Raleway:400,300,700' rel='stylesheet' type='text/css'>
@{
    ViewBag.Title = "Edit";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="back">
        <div class="login-wrap">
            <div class="login-html">
                <div class="form-horizontal">
                    <h4 style="color:azure">Modifica proprietario.</h4>
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    @Html.HiddenFor(model => model.UserId)

                    <div class="form-group">
                        <label class="UtenteFont">Iban :   </label>
                        <div class="group">
                            @Html.EditorFor(model => model.iban, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.iban, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="UtenteFont">Paypal.Me :   </label>
                        <div class="group">
                            @Html.EditorFor(model => model.paypalMe, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.paypalMe, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="UtenteFont">Carta di identità :   </label>
                        <div class="group">
                            @Html.EditorFor(model => model.cartaIdentità, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.cartaIdentità, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div align="center">
                            <input type="submit" value="Salva" class="btn btn-default" />
                        </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
}
